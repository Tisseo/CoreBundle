{% block datepicker_widget %}
    {% spaceless %}
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
            {%  set attr = attr|merge({'class': ((attr.class|default('') ~ ' form-control')|trim)}) %}
            <input type="text"  data-provide="datepicker" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
        </div>
    {% endspaceless %}
{% endblock datepicker_widget %}

{% block form_errors %}
    {% spaceless %}
        {% if errors is not empty %}
            {% if not form.parent %}
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <ul>
            {% else %}
                    <ul class="help-block">
            {% endif %}
                {% for error in errors %}
                    <li>{{
                        error.messagePluralization is null
                            ? error.messageTemplate|trans(error.messageParameters)
                            : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters)
                    }}</li>
                {% endfor %}
            </ul>
            {% if not form.parent %}
                </div>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block button_widget %}
    {% set attr = attr|merge({class: (attr.class|default('btn-default') ~ ' btn')|trim}) %}
    {%- if attr['picto-left'] is not null -%}
        {%  set picto_l = attr['picto-left'] ~ ' ' %}
    {%- else %}
        {%  set picto_l = '' -%}
    {%- endif %}
    {%- if attr['picto-right'] is not null -%}
        {%  set picto_r = ' ' ~ attr['picto-right'] %}
    {%- else %}
        {%  set picto_r = '' %}
    {%- endif -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}

    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ picto_l|raw }}{{ label|trans({}, translation_domain)|raw }}{{ picto_r|raw }}</button>
{% endblock button_widget %}

